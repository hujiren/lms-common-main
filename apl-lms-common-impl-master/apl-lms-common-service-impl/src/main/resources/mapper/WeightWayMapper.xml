<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apl.lms.common.mapper.WeightWayMapper">

    <!-- 查找计泡方式列表-->
    <select id="getList" resultType="com.apl.lms.common.query.manage.dto.WeightWayDto">
        SELECT
            id,
            weight_way_name,
            weight_way_name_en,
            computing_formula,
            code
        FROM
            weight_way
        where
            1=1
        <if test="key.code > 0">
            and code = #{key.code}
        </if>
        <if test="key.keyword != null">
            and locate(#{key.keyword}, weight_way_name)>0
            or locate(#{key.keyword}, weight_way_name_en)>0
        </if>
    </select>


</mapper>
