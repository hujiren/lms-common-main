<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apl.lms.common.mapper.AirCarrierMapper">



    <!-- 查找详情 2020-04-13-->
    <select id="getById" resultType="com.apl.lms.common.query.manage.dto.AirCarrierDto">
        SELECT
          id, 
          carrier_code,
          name_cn, 
          name_en
        FROM
          air_carrier
        where
          id = #{id}
    </select>

    <!-- 查找列表 2020-04-13-->
    <select id="getList" resultType="com.apl.lms.common.query.manage.dto.AirCarrierDto">
        SELECT
           id,
           carrier_code,
           name_cn,
           name_en
        FROM
           air_carrier
        <where>
            1 = 1
            <if test="key.keyword != null and key.keyword != ''">
                and (carrier_code = #{key.upperKeyword}
                or name_cn LIKE CONCAT( '%' , #{key.keyword} , '%' )
                <if test="key.keyword.length()>2">
                    OR name_en LIKE CONCAT( '%' , #{key.keyword} , '%' )
                </if>
                )
            </if>
        </where>
        order by carrier_code
    </select>

    <!-- 检查记录是否重复 -->
    <select id="exists" resultType="com.apl.lms.common.query.manage.dto.AirCarrierDto">
        SELECT
        id,
        carrier_code,
        name_cn,
        name_en
        FROM
        air_carrier
        WHERE
        (carrier_code = #{carrierCode} OR name_cn = #{nameCn} OR name_en = #{nameEn})
        <if test="id != null and id > 0">
            AND id !=  #{id}
        </if>
    </select>
</mapper>
